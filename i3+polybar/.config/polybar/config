[colors]
bg = ${xrdb:color0:#222}
bg-alt = #444
fg = ${xrdb:color7:#dedede}
fg-alt = #aaaaaa
black = ${xrdb:color0:#222}
red = ${xrdb:color1:#f22}
green = ${xrdb:color2:#2f2}
orange = ${xrdb:color3:#f88}
blue = ${xrdb:color4:#22f}
purple = ${xrdb:color5:#f2f}
gray = ${xrdb:color6:#666}
white = ${xrdb:color7:#dedede}


primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/base]
monitor = eDP-1
font-0 = "Monaco:pixelsize=12"
font-1 = "SauceCodePro Nerd Font:size=14"
width = 100%
height = 40
padding = 2

fixed-center = true

wm-restack = i3
# draw over windows
# override-redirect = true

background = #AF222222
foreground = ${colors.fg}

line-size = 3
line-color = #F00

locale = en_US.UTF-8

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/top]
inherit = bar/base

modules-left = wlan eth
modules-center = date
modules-right = battery battery2 temp

[bar/bottom]
inherit = bar/base
bottom = true

offset-bottom = 3

tray-position = right
tray-padding = 4

modules-left = i3
modules-center = xwindow
modules-right = cpu memory volume backlight

[bar/hdmi2]
inherit = bar/bottom
monitor = HDMI-2

modules-right = battery battery2 date 

[settings]
format-padding = 1
format-margin = 1
screenchange-reload = true

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-padding = 0
pin-workspaces = true
index-sort = true
wrapping-scroll = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-padding = ${self.label-mode-padding}
label-focused-background = ${colors.bg-alt}
label-focused-underline = ${colors.primary}

label-visible-padding = ${self.label-mode-padding}

label-unfocused = %index%
label-unfocused-padding = ${self.label-mode-padding}

label-urgent = %index%!
label-urgent-padding = ${self.label-mode-padding}
label-urgent-background = ${colors.alert}

[module/backlight]
type = internal/backlight
card = intel_backlight
;ThinkPad T470S
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.fg-alt}
format-underline = ${colors.orange}

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = "CPU "
format-prefix-foreground = ${colors.fg-alt}
format-underline = ${colors.red}

[module/memory]
type = internal/memory
interval = 5
format-prefix = "MEM "
format-prefix-foreground = ${colors.fg-alt}
format-underline = ${colors.blue}

[module/wlan]
type = internal/network
interface = wlp58s0
internval = 5

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.fg-alt}
format-connected-underline = ${colors.white}
label-connected = %essid% %local_ip%
format-disconnected = 

[module/eth]
type = internal/network
interface = virbr0-nic
interval = 5

format-connected-prefix = "Eth "
format-connected-prefix-foreground = ${colors.fg-alt}
format-connected-underline = ${colors.white}
label-connected = %local_ip%

[module/date]
type = internal/date
interval = 1

format-underline = ${colors.purple}

date = 
date-alt = " %d / %m / %Y"

time = %H:%M:%S
time-alt = %H:%M:%S

format-foreground = ${colors.gray}

label = %date% %time%


[module/volume]
type = internal/volume

format-volume = <bar-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.fg-alt}

format-muted-prefix =
format-muted-foreground = ${colors.fg-alt}
label-muted = "  sound muted  "

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.green}
bar-volume-foreground-1 = ${colors.green}
bar-volume-foreground-2 = ${colors.green}
bar-volume-foreground-3 = ${colors.green}
bar-volume-foreground-4 = ${colors.green}
bar-volume-foreground-5 = ${colors.orange}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.fg-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 101

format-charging-prefix = " "
format-charging-underline = ${colors.green}
format-discharging-underline = ${colors.red}
format-full-underline = ${colors.white}

[module/battery2]
inherit = module/battery
battery = BAT1

[module/temp]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format-underline = ${colors.orange}
format-warn-underline = ${colors.red}

label-warn =  %temperature%!!!

format = <ramp>
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/powermenu]
type = custom/menu

format-spacing = 1

label-open = power
label-open-foreground = ${colors.secondary}
label-close = cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.fg-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = "Weather "
format-prefix-foreground = ${colors.fg-alt}
exec = ~/.config/polybar/weather

