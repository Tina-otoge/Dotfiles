[colors]
bg = ${xrdb:color0:#000}
bg-alt = ${xrdb:color8:#222}
fg = ${xrdb:color7:#fff}
fg-alt = ${xrdb:color7:#fff}
good = #2ecc71
alert = #eb4d4b
volume = #f1c40f
backlight = #a0d1d1
temperature = #f0932b
cpu = #69c0f9
memory = #bbb9f6
tray = #2980b9
; alert = ${xrdb:color1:#f00}

[timers]
fast = 2
medium = 5
slow = 30
very-slow = 600
framerate-medium = 750

[settings]
screenchange-reload = true

[bar/base]
width = 100%
height = 26

fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

locale = en_US.UTF-8

[bar/i3]
inherit = bar/base
override-redirect = true
wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/top]
inherit = bar/i3

; for some reason we can not inherit fonts or monitors
font-0 = "mononoki Nerd Font Mono:size=13"
monitor = ${env:MONITOR:eDP-1}

border-top-size = 4
border-top-color = ${colors.bg}
height = 22

padding = 1
module-margin = 1
modules-left = xkeyboard backlight volume battery battery2 temperature

tray-position = right
; tray-offset-x = -2

[bar/bottom]
inherit = bar/i3
font-0 = "Hiragino Sans GB:size=11"
; font-0 = "mononoki Nerd Font Mono:size=12"
monitor = ${env:MONITOR:eDP-1}
bottom = true
height = 34
width = 72%
offset-x = 14%
offset-y = 6
radius = 8
modules-left = i3
modules-center = xwindow
modules-right = date
module-margin = 1
padding = 2

[bar/bottom2]
inherit = bar/bottom
font-0 = "Hiragino Sans GB:size=11"
monitor = ${env:MONITOR:HDMI-1}
width = 96%
offset-x = 2%

[bar/tray]
inherit = bar/bottom
bottom = true
modules-left =
modules-center = os-label
modules-right =
width = 12%
offset-x = 87%
tray-position = right
tray-detached = true
tray-offset-x = -10

[bar/extra]
inherit = bar/bottom
; monitor = ${env:MONITOR:eDP-1}
font-0 = mononoki Nerd Font Mono:size=8
; bottom = true
; height = 34
width = 11.9%
; padding = 1
; radius = 8
offset-x = 1.1%
; offset-y = 6
; module-margin = 1
modules-left =
modules-center = battery battery2 backlight volume xkeyboard
modules-right =

[module/xwindow]
type = internal/xwindow
label-maxlen = 150

[module/xkeyboard]
type = internal/xkeyboard
label-indicator-on-capslock = CL
label-indicator-on-numlock = NL

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.volume}
format-muted-foreground = ${colors.alert}
ramp-volume-0 = 
ramp-volume-1 = 
label-muted = " muted"

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
format-foreground = ${colors.backlight}
label = %percentage%%
ramp-0 = 
ramp-1 = 

[module/network]
type = internal/network
interval = ${timers.fast}
accumulate-stats = true
format-connected = <label-connected>
format-connected-foreground = ${colors.good}
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.alert}
prefix = Network
label-connected = ↘%downspeed% ↗%upspeed%
label-disconnected =

[module/wlan]
inherit = module/network
interface = ${env:WLAN:wlan0}
label-connected = %essid:0:14:…:% ↘%downspeed% ↗%upspeed%

[module/eth]
inherit = module/network
interface = ${env:ETH:eth0}
format-connected = Ethernet <label-connected>

[module/usb-eth]
inherit = module/eth
interface = ${env:ETHUSB:enp0s20u2}
format-connected = USB Ethernet <label-connected>

[module/temperature]
type = internal/temperature
interval = ${timers.medium}
warn-temperature = 65
format-foreground = ${colors.temperature}
label =  %temperature-c%
label-warn =  %temperature-c%
label-warn-foreground = ${colors.alert}

[module/cpu]
type = internal/cpu
interval = ${timers.medium}
format = <label>
format-foreground = ${colors.cpu}
label = CPU %percentage%%

[module/memory]
type = internal/memory
interval = ${timers.medium}
format = <label>
format-foreground = ${colors.memory}
label = MEM %percentage_used%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 101
format-discharging = <ramp-capacity> <label-discharging>
format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.good}
label-discharging = %percentage%%
label-charging = ${self.label-discharging}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = ${self.ramp-capacity-0}
animation-charging-1 = ${self.ramp-capacity-1}
animation-charging-2 = ${self.ramp-capacity-2}
animation-charging-3 = ${self.ramp-capacity-3}
animation-charging-4 = ${self.ramp-capacity-4}
animation-charging-framerate = ${timers.framerate-medium}

[module/battery2]
inherit = module/battery
battery = BAT1

[module/date]
type = internal/date
interval = ${timers.medium}
date = "%d %b (%a) - %H:%M"

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
format-padding = 0
strip-wsnumber = true
index-sort = true

label-mode-padding = 1

label-focused-background = ${colors.bg-alt}
label-urgent-background = ${colors.alert}
label-mode-background = ${colors.good}

label-focused = " %name% "
label-visible = " %name% "
label-unfocused = " %name% "
label-urgent = !%name%!

label-focused-padding = ${self.label-mode-padding}
label-visible-padding = ${self.label-mode-padding}
label-unfocused-padding = ${self.label-mode-padding}
label-urgent-padding = ${self.label-mode-padding}

[module/os-label]
type = custom/text
content = " "
; vim:ft=dosini
