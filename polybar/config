[colors]
bg = ${xrdb:color0:#000}
bg-alt = ${xrdb:color8:#222}
fg = ${xrdb:color7:#fff}
fg-alt = ${xrdb:color7:#fff}
good = #2ecc71
alert = #eb4d4b
volume = #f1c40f
backlight = #a0d1d1
temperature = #f0932b
cpu = #69c0f9
memory = #bbb9f6
tray = #2980b9
; alert = ${xrdb:color1:#f00}

[timers]
fast = 2
medium = 5
slow = 30
very-slow = 600
framerate-medium = 750

[settings]
screenchange-reload = true

[bar/base]
width = 100%
height = 26

fixed-center = true

background = ${colors.bg}
foreground = ${colors.fg}

locale = en_US.UTF-8

[bar/i3]
inherit = bar/base
override-redirect = false

; wm-restack = i3
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/top]
inherit = bar/i3

; for some reason we can not inherit fonts or monitors
font-0 = "SauceCodePro Nerd Font:size=12"
monitor = ${env:MONITOR:eDP-1}

border-top-size = 4
border-top-color = ${colors.bg}
height = 18

tray-position = right
tray-padding = 2

modules-center = xwindow
modules-right = xkeyboard

[bar/bottom]
inherit = bar/i3
font-0 = "SauceCodePro Nerd Font:size=12"
monitor = ${env:MONITOR:eDP-1}
bottom = true
height = 26
modules-left = i3
modules-right = volume backlight wlan eth usb-eth temperature cpu memory battery battery2 date
module-margin = 1
padding = 1

[module/xwindow]
type = internal/xwindow

[module/xkeyboard]
type = internal/xkeyboard

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.volume}
format-muted-foreground = ${colors.alert}
ramp-volume-0 = 
ramp-volume-1 = 
label-muted = " muted"

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
format-foreground = ${colors.backlight}
label = %percentage%%
ramp-0 = 
ramp-1 = 

[module/network]
type = internal/network
interval = ${timers.fast}
accumulate-stats = true
format-connected = <label-connected>
format-connected-foreground = ${colors.good}
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.alert}
prefix = Network
label-connected = ↘%downspeed% ↗%upspeed%
label-disconnected =

[module/wlan]
inherit = module/network
interface = ${env:WLAN:wlan0}
label-connected = %essid:0:14:…:% ↘%downspeed% ↗%upspeed%

[module/eth]
inherit = module/network
interface = ${env:ETH:eth0}
format-connected = Ethernet <label-connected>

[module/usb-eth]
inherit = module/eth
interface = ${env:ETHUSB:enp0s20u2}
format-connected = USB Ethernet <label-connected>

[module/temperature]
type = internal/temperature
interval = ${timers.medium}
warn-temperature = 65
format-foreground = ${colors.temperature}
label =  %temperature-c%
label-warn =  %temperature-c%
label-warn-foreground = ${colors.alert}

[module/cpu]
type = internal/cpu
interval = ${timers.medium}
format = <label>
format-foreground = ${colors.cpu}
label = CPU %percentage%%

[module/memory]
type = internal/memory
interval = ${timers.medium}
format = <label>
format-foreground = ${colors.memory}
label = MEM %percentage_used%%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 101
format-discharging = <ramp-capacity> <label-discharging>
format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.good}
label-discharging = %percentage%%
label-charging = ${self.label-discharging}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = ${self.ramp-capacity-0}
animation-charging-1 = ${self.ramp-capacity-1}
animation-charging-2 = ${self.ramp-capacity-2}
animation-charging-3 = ${self.ramp-capacity-3}
animation-charging-4 = ${self.ramp-capacity-4}
animation-charging-framerate = ${timers.framerate-medium}

[module/battery2]
inherit = module/battery
battery = BAT1

[module/date]
type = internal/date
interval = 1
date = "%Y-%m-%d (%a) %H:%M:%S"

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
format-padding = 1
strip-wsnumber = true
index-sort = true

label-mode-padding = 1

label-focused-background = ${colors.bg-alt}
label-urgent-background = ${colors.alert}

label-focused = %name%
label-visible = %name%
label-unfocused = %name%
label-urgent = %name%!!

label-focused-padding = ${self.label-mode-padding}
label-visible-padding = ${self.label-mode-padding}
label-unfocused-padding = ${self.label-mode-padding}
label-urgent-padding = ${self.label-mode-padding}

