[include]
	path = identity
	path = custom

[alias]
	oops    = reset HEAD~
	uu      = !git submodule foreach 'git reset HEAD && git checkout .' && git submodule update --recursive --remote -N
	unstage = reset --
	unadd   = reset --
	news    = log -p @{1}..

; [url "git@github.com:"]
; 	insteadOf = https://github.com/

[push]
	default = current
	autoSetupRemote = true

[core]
	editor = vim

[diff]
	tool = vimdiff

[merge]
	ff = true

[pull]
	rebase = false

[init]
	defaultBranch = master

[diff "sopsdiffer"]
	textconv = sops -d

# vim: ft=gitconfig
