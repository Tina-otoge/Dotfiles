[include]
	path = identity
	path = custom

[alias]
	news    = log -p @{1}..
	oops    = reset HEAD~
	uu      = submodule foreach 'git reset HEAD && git checkout . && git pull origin master --ff'
	unstage = reset --
	unadd   = reset

[url "git@github.com:"]
	insteadOf = https://github.com/

[push]
	default = current

[core]
	editor = vim

[diff]
	tool = vimdiff

[merge]
	ff = true
# vim: ft=gitconfig
