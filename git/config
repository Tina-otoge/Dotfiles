[include]
	path = identity
	path = custom

[alias]
	oops    = reset HEAD~
	uu      = submodule foreach 'git reset HEAD && git checkout . && git pull origin master --ff'
	unstage = reset --
	unadd   = reset --
	news    = log -p @{1}..

[url "git@github.com:"]
	insteadOf = https://github.com/

[push]
	default = current

[core]
	editor = vim

[diff]
	tool = vimdiff

[merge]
	ff = true

[pull]
	rebase = false

[init]
	defaultBranch = master

[diff "sopsdiffer"]
	textconv = sops -d

# vim: ft=gitconfig
