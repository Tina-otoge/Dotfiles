#!/bin/bash
################
# SH FUNCTIONS #
################

mkcd()
{
	mkdir -p "$*"
	cd "$*"
}

vw()
{
	vim `which "$1"`
}

uu() {
	command -v apt && apt update && apt upgrade $* && return 0
	command -v apt-get && apt-get update && apt-get upgrade $* && return 0
	command -v dnf && dnf upgrade --refresh $* && return 0
	command -v pacman && pacman -Syu $* && return 0

	echo No known package manager found. Aborting. >2
	exit 1
}

ud() {
	(cd "$dotfiles" && git pull --ff)
}

casm()
{
	nasm -f elf64 "$1" -o /tmp/casm.o
	ld -dynamic-linker /lib64/ld-linux-x86-64.so.2 /tmp/casm.o \
		-o ${2:-a.out} -lc
}
