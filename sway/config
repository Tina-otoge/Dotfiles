include ../i3/config
include /etc/sway/config.d/*

exec mako --default-timeout 10000
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

bindsym $mod+l exec swaylock --screenshots --fade-in 3 --effect-blur 10x3 --effect-compose ~/Pictures/lock.png

output * bg /usr/share/backgrounds/default.png fill

output eDP-1 pos 0 1080
output HDMI-A-2 pos 0 0

input * {
	xkb_layout "fr,us"
}

input "1:1:AT_Translated_Set_2_keyboard" xkb_options caps:swapescape

input "1452:591:Keychron_K3_Keyboard" {
	xkb_layout "us"
	xkb_variant "altgr-intl"
}

seat * hide_cursor 2000

gaps bottom 0

bar {
	swaybar_command waybar
}
