arbo() {
    mkdir -p include
    mkdir -p src
    mkdir -p lib
    echo "*.o\n#*#\n*~\n*.swp" >> .gitignore
    touch src/main.c
}

blihr() {
    blihu repository setacl "$1" ramassage-tek r
}
blihcr() {
    blihc $1
    blihr $1
}

blihclone() {
    git clone git@git.epitech.eu:/damien.savatier@epitech.eu/"$1"
}
alias bliclone=blihclone

chgsize() {
	printf '\33]50;%s\007' "xft:Monaco:size=$1"
}
alias cz=chgsize

mkcd() {
    mkdir -p $1
    cd $1
}

