# alternatives
alias v='vim'
alias ne='/usr/bin/emacs -nw'
alias e='edit'
alias c='cat'
alias vime='ne'
alias emacs='ne'
alias cls='clear'
alias motd='fortune'
alias nyan='nyancat'
alias py='python3'
alias py2='python2'
alias blic='blihc'
alias ch='chmod'
alias svp='sudo'
alias stp='sudo'
alias please='sudo'
alias fucking='sudo'
alias bliclone='blihclone'
alias blido='blihdo'
alias cz='chgsize'

# options shorteners
alias l='ls -1'
alias ll='ls -gh --time-style=long-iso'
alias wifi='gnome-control-center network'
alias sound='gnome-control-center sound'
alias glog="git log --graph --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)<%an>%C(yellow)%d%Creset' --abbrev-commit"
alias gay='lolcat -a -d 3'

# commands shorteners
alias blog='cd ~/repos/skielred/blog'
alias uu='dnf upgrade --refresh'
alias blihu='blih -u damien.savatier@epitech.eu'
alias blihc='blihu repository create'
alias nyancat='telnet nyancat.dankko.us'

# functions
arbo() {
    mkdir -p include
    mkdir -p src
    mkdir -p lib
    echo "*.o\n#*#\n*~\n*.swp" >> .gitignore
    touch src/main.c
}

blihr() {
    blihu repository setacl "$1" ramassage-tek r
}
blihcr() {
    blihc $1
    blihr $1
}

blihclone() {
    git clone git@git.epitech.eu:/damien.savatier@epitech.eu/"$1" >/dev/null
    if [ "$2" != '' ]; then
        echo "$1" -\> "$2"
        mv "$1" "$2"
    fi
}

blihdo() {
    blihc $1
    blihr $1
    blihclone $1 $2
}

chgsize() {
    if [ $(($1%2)) -eq 1 ]; then
        echo You must input an even number
        return
    fi
	printf '\33]50;%s\007' "xft:Monaco:size=$1"
}

edit() {
    $EDITOR $1
}

ghclone() {
	if [ -z $2 ]; then
		git clone git@github.com:"$1"
	else
		git clone git@github.com:"$1" "$2"
	fi
}

mkcd() {
    mkdir -p $1
    cd $1
}

