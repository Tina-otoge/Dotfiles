# Helper function to include other files
function include_exists() {
    if [ -f $1 ]; then       
        . $1
    fi
}

# No Software Flow Control in terminals : don't send C-q C-s
# Allows using Ctrl + S in vim for example
stty -ixon

# # # # # # # # # # #
# Global veriables  #
# # # # # # # # # # #

export ACADEMICYEAR=2017
export ENV=~/.config/shell_profile
export EDITOR=vim
export GOPATH=~/.go
export CHROMIUM_BROWSER=$(which google-chrome)
# alternatives :
# export CHROMIUM_BROWSER=$(which chromium)
# export CHROMIUM_BROWSER=$(which vivaldi)
export DEFAULT_TERM=$(which urxvt256c)
export RANGER_LOAD_DEFAULT_RC=false

# # # # # # # # # # #
# Files inclusions  #
# # # # # # # # # # #

# These are called everytime a shell is loaded

include_exists ~/.config/aliases
include_exists ~/.cargo/env
#include_exists ~/.config/block.sh
include_exists ~/.config/epitech
if [ $TILIX_ID ] || [ $VTE_VERSION ]; then
        include_exists /etc/profile.d/vte.sh
fi
include_exists ~/.config/welcome

